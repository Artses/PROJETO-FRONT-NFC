@code {
    List<Models.Alunos> chamadas = new global::System.Collections.Generic.List<global::ProjetoBFP.Models.Alunos>();
    protected override async Task OnInitializedAsync()
    {
        chamadas = await chamadaClient.GetChamadas();
    }
}