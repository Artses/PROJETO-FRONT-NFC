<body>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Matricula</th>
                <th>Nome</th>
                <th>Status</th>
                <th>Data</th>
            </tr>
        </thead>
            @foreach(var aluno in chamadas)
            {
            <tbody>
                <td>@aluno.Id</td>
                <td>@aluno.AlunoId</td>
                <td>@aluno.AlunoNome</td>
                <td>@aluno.Tipo</td>
                <td>@DateTime.Parse(aluno.Data).ToString("dd/MM/yyyy HH:mm")</td>
            </tbody>
            }
    </table>
</body>

